<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<%-
	(function() {
		if (!metadata) {
			return;
		}

		const baseUrl = "https://www.camilabalboa.com";

		const output = [];

		const writeMeta = function(attributes) {
			output.push("<meta");

			Object
				.keys(attributes)
				.forEach(key => {
					output.push(` ${key}="${attributes[key]}"`);
				});

			output.push(">\n");
		};

		writeMeta({
			property: "og:title",
			content: metadata.title || partial("title"),
		});

		if (metadata.description) {
			writeMeta({
				name: "description",
				content: metadata.description
			});
			writeMeta({
				property: "og:description",
				content: metadata.description
			});
		}

		writeMeta({
			property: "og:image",
			content: metadata.image || `${baseUrl}/images/thumbnail.png`
		});
		writeMeta({
			property: "og:image:width",
			content: "1280",
		});
		writeMeta({
			property: "og:image:height",
			content: "720",
		});

		writeMeta({
			property: "og:type",
			content: "website"
		});

		writeMeta({
			property: "og:site_name",
			content: "Camila Balboa"
		});

		writeMeta({
			property: "og:locale",
			content: metadata.locale || "en_US"
		});

		writeMeta({
			name: "theme-color",
			content: "#11392e",
		});

		const path = `${baseUrl}/${metadata.canonical || partial("currentPath")}`;

		writeMeta({
			property: "og:url",
			content: path,
		});

		output.push(`<link rel="canonical" href="${path}" />`);

		return output.join("");
	}());
%>